- content_for(:tab, "products")

%section.product-details.spad
  .container
    .row
      .col-lg-6
        .product__details__pic
          .product__details__pic__left.product__thumb.nice-scroll
            %a.pt.active{:href => "#product-1"}
              %img{:alt => "", "data-pagespeed-url-hash" => "3425536346", :onload => "pagespeed.CriticalImages.checkImageForCriticality(this);", :src => "https://picsum.photos/200/400"}/
            %a.pt{:href => "#product-2"}
              %img{:alt => "", "data-pagespeed-url-hash" => "3720036267", :onload => "pagespeed.CriticalImages.checkImageForCriticality(this);", :src => "https://picsum.photos/200/400"}/
            %a.pt{:href => "#product-3"}
              %img{:alt => "", "data-pagespeed-url-hash" => "4014536188", :onload => "pagespeed.CriticalImages.checkImageForCriticality(this);", :src => "https://picsum.photos/200/400"}/
            %a.pt{:href => "#product-4"}
              %img{:alt => "", "data-pagespeed-url-hash" => "14068813", :onload => "pagespeed.CriticalImages.checkImageForCriticality(this);", :src => "https://picsum.photos/200/400"}/
          .product__details__slider__content
            .product__details__pic__slider.owl-carousel
              %img.product__big__img{:alt => "", "data-hash" => "product-1", "data-pagespeed-url-hash" => "3621627699", :onload => "pagespeed.CriticalImages.checkImageForCriticality(this);", :src => "https://picsum.photos/200/400"}/
              %img.product__big__img{:alt => "", "data-hash" => "product-2", "data-pagespeed-url-hash" => "4210627541", :onload => "pagespeed.CriticalImages.checkImageForCriticality(this);", :src => "https://picsum.photos/200/400"}/
              %img.product__big__img{:alt => "", "data-hash" => "product-3", "data-pagespeed-url-hash" => "3916127620", :onload => "pagespeed.CriticalImages.checkImageForCriticality(this);", :src => "https://picsum.photos/200/400"}/
              %img.product__big__img{:alt => "", "data-hash" => "product-4", "data-pagespeed-url-hash" => "210160166", :onload => "pagespeed.CriticalImages.checkImageForCriticality(this);", :src => "https://picsum.photos/200/400"}/
      .col-lg-6
        .product__details__text
          %h3
            = @product.name
            %span="Category: #{@product.category_name}"
          .product__details__price
            - if @product.discount
              =number_to_currency(@product.discount_price, unit: "VNĐ", separator: ",", delimiter: ".", format: "%n %u")
              %span=number_to_currency(@product.price.to_f, unit: "VNĐ", separator: ",", delimiter: ".", format: "%n %u")
            - else
              =number_to_currency(@product.price.to_f, unit: "VNĐ", separator: ",", delimiter: ".", format: "%n %u")
          %p=@product.description
          .product__details__button
            .quantity
              %span Quantity:
              .pro-qty
                %input{:type => "number", min: "1", :value => "1"}/
            %a.cart-btn{:href => "#"}
              = image_tag("cart2.png", alt: 'seacrh', width: "14px", height: "16px")
              Add to cart
      .col-lg-12
        .product__details__tab
          %ul.nav.nav-tabs{:role => "tablist"}
            %li.nav-item
              %a.nav-link.active{"data-toggle" => "tab", :href => "#tabs-1", :role => "tab"} Description
          .tab-content
            #tabs-1.tab-pane.active{:role => "tabpanel"}
              %h6 Description
              %p=@product.description
    .row
      .col-lg-12.text-center
        .related__title
          %h5 RELATED PRODUCTS
      = render partial: 'product_relate', collection: Product.with_category(@product.category_code).sample(8), as: :product